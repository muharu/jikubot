{
  "name": "@giverve/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*"
        ]
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@giverve/db": "workspace:*",
    "@giverve/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "cookie": "^0.6.0",
    "cryptr": "^6.3.0",
    "jose": "^5.6.3",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "superjson": "catalog:",
    "wretch": "^2.9.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@giverve/eslint-config": "workspace:*",
    "@giverve/prettier-config": "workspace:*",
    "@giverve/tsconfig": "workspace:*",
    "@types/cookie": "^0.6.0",
    "@types/flat-cache": "^2.0.2",
    "discord-api-types": "^0.37.94",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@giverve/prettier-config"
}
